@page "{id:int}"
@model BookFlixRazor.Pages.Libros.DetalleLibroModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="/img/@Model.Libro.Imagen" class="img-fluid" alt="@Model.Libro.Titulo">
        </div>
        <div class="col-md-8">
            <h2>@Model.Libro.Titulo</h2>
            <h5 class="text-muted">@Model.Libro.Autor</h5>
            <p>@Model.Libro.Descripcion</p>
            <p class="fw-bold fs-4">$@Model.Libro.Precio</p>
            <a asp-page="/Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
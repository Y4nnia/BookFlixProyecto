@page
@model BookFlixRazor.Pages.IndexModel

<h2 class="text-center mb-4"> Catálogo de Libros</h2>

<form method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Buscar por titulo o autor..." value="@Request.Query["q"]" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<div class="row">
@foreach (var libro in Model.Libros)
{
    <div class="col-md-3 mb-4">
        <div class="card h-100">
            <img src="/img/@libro.Imagen" class="card-img-top" alt="@libro.Titulo">
            <div class="card-body">
                <h5 class="card-title">@libro.Titulo</h5>
                <p class="card-text">@libro.Autor</p>
                <p class="fw-bold">$@libro.Precio</p>
                <a asp-page="/DetalleLibro" asp-route-id="@libro.Id" class="btn btn-primary">
                    Ver más
                </a>
            </div>
        </div>
    </div>
}
</div>

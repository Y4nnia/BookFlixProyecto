@page
@model BookFlixRazor.Pages.LoginModel

<h2>Iniciar Sesión</h2>
<form method="post">
    <div class="mb-3">
        <label>Correo</label>
        <input asp-for="Correo" class="form-control" required type="email" />
    </div>
    <div class="mb-3">
        <label>Contraseña</label>
        <input asp-for="Password" class="form-control" required type="password" />
    </div>
    <button type="submit" class="btn btn-primary">Entrar</button>
</form>
@if (Model.Mensaje != null)
{
    <div class="alert alert-danger mt-3">@Model.Mensaje</div>
}